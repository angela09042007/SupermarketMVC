<%- include('partials/header', { title: 'Your Cart' }) %>
<%- include('partials/navbar', { user: locals.user }) %>

  <div class="container">
    <div class="content-card">
      <div class="section-heading mb-3">
        <div>
          <p class="eyebrow mb-1">Cart</p>
          <h2 class="mb-0">Your picks</h2>
        </div>
        <a href="/shopping" class="btn btn-light btn-sm">Back to shopping</a>
      </div>

      <% if (messages && messages.length) { %>
        <div class="alert alert-success"><%= messages[0] %></div>
      <% } %>
      <% if (errors && errors.length) { %>
        <div class="alert alert-danger"><%= errors[0] %></div>
      <% } %>

      <% if (cart.length === 0) { %>
        <div class="empty-state">Your cart is empty.</div>
      <% } else { %>
        <div class="table-responsive table-card">
          <table class="table table-striped align-middle mb-0">
            <thead>
              <tr>
                <th>Product</th>
                <th>Image</th>
                <th>Price</th>
                <th>Quantity</th>
                <th>Total</th>
                <th>Actions</th>
              </tr>
            </thead>
            <tbody>
              <% let total = 0; %>
              <% for (let i = 0; i < cart.length; i++) { %>
                <tr>
                    <td><%= cart[i].productName %></td>
                    <td><img src="/images/<%= cart[i].image %>" width="80" class="img-thumbnail"></td>
                    <td>$<%= cart[i].price.toFixed(2) %></td>
                    <td>
                      <form action="/cart/update/<%= cart[i].id %>" method="POST" class="d-flex align-items-center gap-2">
                        <input type="number" name="quantity" value="<%= cart[i].quantity %>" min="1" class="form-control form-control-sm" style="width: 90px;">
                        <button type="submit" class="btn btn-sm btn-primary">Update</button>
                      </form>
                    </td>
                    <td>$<%= (cart[i].price * cart[i].quantity).toFixed(2) %></td>
                    <td>
                      <form action="/cart/remove/<%= cart[i].id %>" method="POST">
                        <button type="submit" class="btn btn-sm btn-outline-danger">Remove</button>
                      </form>
                    </td>
                </tr>
                <% total += cart[i].price * cart[i].quantity; %>
              <% }; %>
            </tbody>
          </table>
        </div>

        <div class="d-flex flex-wrap justify-content-between align-items-start mt-3 gap-3">
          <div>
            <form id="promo-form" class="d-flex flex-wrap gap-2 align-items-center">
              <input type="hidden" id="cart-subtotal" value="<%= total.toFixed(2) %>">
              <input type="text" name="promoCode" id="promoCode" placeholder="Promo code" class="form-control" style="width:200px;">
              <button type="submit" class="btn btn-outline-info">Apply Code</button>
            </form>
            <div id="promo-result" class="mt-2 small text-muted"></div>
            <div id="promo-totals" class="mt-2">
              <div>Subtotal: $<span id="promo-subtotal"><%= total.toFixed(2) %></span></div>
              <div>Discount: $<span id="promo-discount">0.00</span></div>
              <div><strong>Total: $<span id="promo-total"><%= total.toFixed(2) %></span></strong></div>
            </div>
          </div>
          <div class="d-flex flex-wrap gap-2">
            <h4 class="mb-2 mb-md-0 align-self-center">Total: $<%= total.toFixed(2) %></h4>
            <form action="/cart/clear" method="POST" class="d-inline">
              <button type="submit" class="btn btn-light">Clear Cart</button>
            </form>
            <form action="/cart/checkout" method="POST" class="d-inline">
              <button type="submit" class="btn btn-primary">Checkout</button>
            </form>
          </div>
        </div>
      <% } %>
    </div>
  </div>

<%- include('partials/footer') %>

<script>
  const form = document.getElementById('promo-form');
  if (form) {
    form.addEventListener('submit', async (e) => {
      e.preventDefault();
      const code = document.getElementById('promoCode').value;
      const subtotal = document.getElementById('cart-subtotal').value;
      const resultEl = document.getElementById('promo-result');
      resultEl.textContent = 'Applying...';
      try {
        const res = await fetch('/cart/apply-code', {
          method: 'POST',
          headers: { 'Content-Type': 'application/x-www-form-urlencoded' },
          body: new URLSearchParams({ promoCode: code, subtotal })
        });
        const data = await res.json();
        if (!data.success) {
          resultEl.textContent = data.message || 'Invalid code.';
          document.getElementById('promo-discount').textContent = '0.00';
          document.getElementById('promo-total').textContent = parseFloat(subtotal).toFixed(2);
          return;
        }
        resultEl.textContent = data.message;
        document.getElementById('promo-discount').textContent = Number(data.discount).toFixed(2);
        document.getElementById('promo-total').textContent = Number(data.total).toFixed(2);
      } catch (err) {
        resultEl.textContent = 'Error applying code.';
      }
    });
  }
</script>
