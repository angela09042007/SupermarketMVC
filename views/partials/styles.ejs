<style>
:root {
  --brand: #1f7a8c;
  --brand-strong: #145365;
  --accent: #f0a500;
  --surface: #ffffff;
  --muted: #6b7280;
  --text: #0f172a;
  --border: #e5e7eb;
  --bg: #f6f7fb;
}

html, body {
  height: 100%;
}

body {
  font-family: 'Manrope', system-ui, -apple-system, "Segoe UI", sans-serif;
  color: var(--text);
  background: radial-gradient(circle at 20% 20%, rgba(31,122,140,0.08), transparent 35%),
              radial-gradient(circle at 80% 0%, rgba(240,165,0,0.08), transparent 30%),
              var(--bg);
  line-height: 1.6;
  -webkit-font-smoothing: antialiased;
  -moz-osx-font-smoothing: grayscale;
}

.page-shell {
  min-height: 100vh;
  padding: 1.5rem;
}

.container {
  max-width: 1100px;
}

/* Navbar */
.soft-nav {
  background: rgba(255,255,255,0.9);
  backdrop-filter: blur(6px);
  border-radius: 16px;
  border: 1px solid rgba(229,231,235,0.8);
  margin-bottom: 1.75rem;
}

.navbar-brand {
  font-weight: 700;
  letter-spacing: 0.2px;
  color: var(--brand);
}

.nav-link {
  padding: 0.5rem 0.85rem;
  color: #344054;
  transition: all 0.15s ease;
}

.nav-link:hover,
.nav-link:focus {
  color: var(--brand-strong);
  background: rgba(31,122,140,0.08);
}

.brand-pill {
  width: 36px;
  height: 36px;
  border-radius: 12px;
  display: grid;
  place-items: center;
  background: linear-gradient(135deg, var(--brand), var(--brand-strong));
  color: #fff;
  font-weight: 700;
  letter-spacing: 0.5px;
  font-size: 0.9rem;
}

.user-chip {
  display: grid;
  grid-template-columns: auto 1fr;
  gap: 0.65rem;
  padding: 0.45rem 0.75rem;
  border-radius: 14px;
  border: 1px solid var(--border);
  background: rgba(255,255,255,0.7);
}

.user-dot {
  width: 10px;
  height: 10px;
  border-radius: 999px;
  background: #22c55e;
  margin-top: 0.35rem;
}

/* Cards & layout helpers */
.content-card {
  background: var(--surface);
  border-radius: 16px;
  border: 1px solid var(--border);
  box-shadow: 0 10px 45px rgba(15, 23, 42, 0.08);
  padding: 1.75rem;
}

.section-heading {
  display: flex;
  align-items: center;
  justify-content: space-between;
  gap: 0.75rem;
}

.eyebrow {
  font-size: 0.85rem;
  letter-spacing: 0.06em;
  text-transform: uppercase;
  color: var(--brand-strong);
  font-weight: 700;
}

.muted {
  color: var(--muted);
}

.chip {
  display: inline-flex;
  align-items: center;
  gap: 0.4rem;
  padding: 0.35rem 0.65rem;
  border-radius: 999px;
  background: rgba(31,122,140,0.08);
  color: var(--brand-strong);
  font-weight: 600;
  font-size: 0.9rem;
}

.hero {
  padding: 2.5rem;
  border-radius: 18px;
  background: linear-gradient(135deg, rgba(31,122,140,0.08), rgba(240,165,0,0.08));
  border: 1px solid rgba(31,122,140,0.12);
}

.hero-visual {
  position: relative;
  overflow: hidden;
  color: #0f172a;
  border: none;
  background:
    linear-gradient(120deg, rgba(255,255,255,0.92) 0%, rgba(255,255,255,0.9) 55%, rgba(15,23,42,0.55) 100%),
    url('https://images7.alphacoders.com/350/350842.jpg') center/cover no-repeat;
  box-shadow: 0 16px 55px rgba(15,23,42,0.25);
  display: grid;
  align-items: center;
  min-height: 420px;
}

.hero-content {
  max-width: 540px;
  text-align: left;
}

.hero-visual h1 {
  font-weight: 800;
}

.hero-visual .hero-actions .btn {
  min-width: 160px;
  height: 54px;
  display: inline-flex;
  align-items: center;
  justify-content: center;
  font-size: 1.05rem;
}

.search-bar {
  display: flex;
  align-items: center;
  gap: 0.75rem;
  background: #fff;
  border-radius: 999px;
  padding: 0.75rem 1.1rem;
  box-shadow: 0 12px 35px rgba(15,23,42,0.08);
  border: 1px solid rgba(15,23,42,0.08);
  width: 100%;
  max-width: 560px;
  margin-bottom: 1rem;
}

.search-bar input {
  border: none;
  outline: none;
  width: 100%;
  font-size: 1.05rem;
  color: #0f172a;
  flex: 1;
}

.search-bar button {
  border-radius: 12px;
  box-shadow: 0 10px 24px rgba(20,83,101,0.2);
}

.search-icon {
  width: 22px;
  height: 22px;
  opacity: 0.65;
}

.hero h1 {
  font-weight: 700;
  color: #0f172a;
}

.hero-actions .btn {
  min-width: 140px;
}

.surface {
  background: var(--surface);
  border: 1px solid var(--border);
  border-radius: 16px;
  box-shadow: 0 8px 35px rgba(15,23,42,0.05);
  padding: 1.25rem;
}

.empty-state {
  border: 1px dashed var(--border);
  border-radius: 12px;
  padding: 1rem;
  text-align: center;
  color: var(--muted);
}

/* Buttons */
.btn {
  border-radius: 0.8rem;
  padding: 0.65rem 1rem;
  font-weight: 600;
}

.btn-primary {
  background: linear-gradient(135deg, var(--brand), var(--brand-strong));
  border: none;
  box-shadow: 0 8px 20px rgba(20,83,101,0.25);
}

.btn-outline-secondary {
  border-radius: 0.8rem;
}

.btn-light {
  border: 1px solid var(--border);
}

/* Tables */
.table-card {
  border-radius: 16px;
  overflow: hidden;
  border: 1px solid var(--border);
  box-shadow: 0 10px 40px rgba(15,23,42,0.06);
}

.table thead th {
  background: rgba(15,23,42,0.02);
  color: #475569;
  border-bottom: 1px solid var(--border);
}

.table tbody td {
  vertical-align: middle;
}

.table img {
  max-width: 96px;
  height: auto;
  border-radius: 10px;
}

/* Forms */
label {
  font-weight: 600;
  color: #1f2937;
}

.form-control, .form-select {
  border-radius: 0.75rem;
  padding: 0.65rem 0.9rem;
  border: 1px solid #d5d9e2;
  background: #fff;
}

.form-control:focus, .form-select:focus {
  border-color: var(--brand);
  box-shadow: 0 0 0 0.2rem rgba(31,122,140,0.15);
}

.auth-card {
  max-width: 520px;
  margin: 0 auto;
}

/* Images */
.product-image {
  max-width: 320px;
  width: 100%;
  height: auto;
  border-radius: 0.75rem;
  object-fit: cover;
}

footer {
  padding: 2rem 0 1rem;
  color: var(--muted);
}

/* Responsive tweaks */
@media (max-width: 767px) {
  .page-shell {
    padding: 1rem;
  }

  .nav-link {
    padding-left: 0.6rem;
  }

  .hero {
    padding: 1.75rem;
  }
}
</style>
